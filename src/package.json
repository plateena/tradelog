{
  "name": "tradelog",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node ./server.ts",
    "test": "NODE_ENV=test jest --coverage --color --verbose --detectOpenHandles"
  },
  "author": "zainundin.coders@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "jest-runner-groups": "^2.2.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "mongoose": "^8.1.2"
  },
  "jest": {
    "rootDir": "./",
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "runner": "groups",
    "setupFiles": [
      "./tests/jest.setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "<rootDir>/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "./server.ts",
      "./types"
    ]
  }
}
